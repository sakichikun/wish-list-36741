<div class="contents_row">
  <div class="my_top">
    <p><b><%= @nickname %></b> さんの BUCKET LIST</p>
  </div>
  <div class="list_frame">
    <% @wishes.each do |wish| %>
      <div class="content_post">
        <p class="text"><%= wish.title %></p>
        <p>
        <%= link_to '詳細', wish_path(wish.id), method: :get, class:"btn-flat-border" %>
        <%= link_to '編集', edit_wish_path(wish.id), method: :get, class:"btn-flat-border" %>
        <%= link_to '削除', wish_path(wish.id), method: :delete, class:"btn-flat-border" %>
        </p>
      </div>
      <hr>
    <% end %>
  </div>
</div>